# Environment Variables Template
# Copy this file to .env and fill in with your actual values
# NEVER commit .env file to version control

# ============================================================================
# Django Configuration
# ============================================================================

# Django Secret Key - Generate with:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your_secret_key_here

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# Database Configuration
# ============================================================================

# Database settings (if using environment variables)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# ============================================================================
# Email Configuration
# ============================================================================

# SMTP settings for sending emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com

# For Gmail, use App Password instead of account password
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_HOST_PASSWORD=your_gmail_app_password_here

# ============================================================================
# API Tokens
# ============================================================================

# NOAA API Token
# Get yours at: https://www.ncdc.noaa.gov/cdo-web/token
NOAA_API_TOKEN=your_noaa_api_token_here

# USGS API Token (if required)
# USGS_API_TOKEN=your_usgs_token_here

# Mapbox Access Token
# Get yours at: https://account.mapbox.com/access-tokens/
# Note: For client-side use, configure URL restrictions in Mapbox dashboard
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# ============================================================================
# Azure Configuration (if deploying to Azure)
# ============================================================================

# AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
# AZURE_STORAGE_ACCOUNT_KEY=your_storage_key
# AZURE_STORAGE_CONTAINER=your_container_name

# ============================================================================
# Other Configuration
# ============================================================================

# Add other environment-specific variables here
